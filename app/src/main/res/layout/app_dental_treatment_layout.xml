                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"></ImageView>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_local_anesthetic_benzocaine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dental_label_local_anesthetic_benzocaine"
                        />
                    <CheckBox
                        android:id="@+id/checkbox_local_anesthetic_lidocaine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dental_label_local_anesthetic_lidocaine"
                        />
                    <CheckBox
                        android:id="@+id/checkbox_local_anesthetic_septocaine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dental_label_local_anesthetic_septocaine"
                        />
                    <CheckBox
                        android:id="@+id/checkbox_local_anesthetic_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dental_label_local_anesthetic_other"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dental_label_number_of_carps"/>
                <EditText
                    android:id="@+id/text_number_of_carps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:inputType="number"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="15dp">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <EditText
                    android:id="@+id/dental_anesthetic_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:hint="@string/dental_anesthetic_notes_hint"
                    android:gravity="top"
                    android:lines="3"
                    android:inputType="text|textMultiLine" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"/>

            <!-- Per-Visit/Full-Mouth Treatment Codes -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@color/lightGray"
                    android:text="@string/section_title_per_visit_full_mouth"
                    android:textSize="@dimen/med_hist_label_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dental_label_per_visit_full_mouth_treatment_codes" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_per_visit_codes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_custom"
                        android:text="@string/view_edit"
                        />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"/>

            <!-- Notes -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@color/lightGray"
                    android:hint="@string/dental_general_notes_hint"
                    android:text="@string/section_title_notes"
                    android:textSize="@dimen/med_hist_label_text_size" />
            </LinearLayout>

            <!-- following hidden view hack causes edit text field to NOT get focus on dialog show -->

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <EditText
                android:id="@+id/dental_notes"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/edittext_border"
                android:gravity="top"
                android:inputType="text|textMultiLine" />

            <!-- following view hack helps ensure that text area is not completely hidden by soft keyboard -->
            <View
                android:layout_width="0dp"
                android:layout_height="512dp"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>
    </LinearLayout>

    <!-- tooth chart -->

    <ImageView
        android:id="@+id/dental_treatment_toothchart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/tooth_chart_top"
        android:paddingRight="16dp">

    </ImageView>

    <!-- FAB for navigating between form and tooth chart -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/tooth_216px_transparent"
        app:fabSize="auto" />
</FrameLayout>